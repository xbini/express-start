<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello express!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <form class="row">
            <div class="form-group col-sm-12">
                <h3>Transfer data to server.</h3>
            </div>
            <div class="form-group col-sm-12">
                <textarea class="form-control" name="chat-input" id="chat-input" rows="3"></textarea>
            </div>
            <div class="form-group col-sm-12 text-right">
                <button id="submit" type="button" class="btn btn-primary">
                    <span>发送</span>
                    <span style="display: none;" class="spinner-border spinner-border-sm" role="status"
                        aria-hidden="true"></span>
                </button>
            </div>
        </form>
    </div>
</body>
<script>
    var submitButton = document.querySelector('#submit');
    var textbox = document.querySelector('#chat-input');

    function submit() {
        var message = textbox.value;
        if (!String(message)) {
            return;
        }
        var buttonSpinner = submitButton.querySelector('.spinner-border');
        var chatAPI = '/chat';
        var data = {
            message: message,
            time: Date.now().toString()
        };
        var options = {
            body: JSON.stringify(data),
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        };
        // buttonSpinner.style.display = '';
        fetch(chatAPI, options).then(function (res) {
            console.log(res);
            // buttonSpinner.style.display = 'none';
        });
    }
    submitButton.addEventListener('click', submit);

</script>

</html>
